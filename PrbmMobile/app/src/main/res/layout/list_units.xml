<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@drawable/linear_divider"
              android:orientation="horizontal"
              android:showDividers="middle"
    >

    <LinearLayout
        android:id="@+id/lstEntityFarLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddFarLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:focusable="false"
            android:background="@drawable/button_add"
            android:text="Aggiungi"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lstEntityNearLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddNearLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:focusable="false"
            android:background="@drawable/button_add"
            android:text="Aggiungi"/>
    </LinearLayout>


    <LinearLayout android:id="@+id/linearUnitcenter"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_margin="5dp"
                  android:layout_weight="2"

                  android:orientation="vertical">

        <TextView
            android:id="@+id/txtMeters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtAzimut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lstEntityNearRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"

        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddNearRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:focusable="false"
            android:background="@drawable/button_add"
            android:text="Aggiungi"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lstEntityFarRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddFarRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:focusable="false"
            android:background="@drawable/button_add"
            android:text="Aggiungi"/>
    </LinearLayout>
</LinearLayout>